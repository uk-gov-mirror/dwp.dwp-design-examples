{% macro dwpKeyDetailsBar(params) %} 
  <section class="dwp-key-details-bar" role="contentinfo" aria-label="Key details">
    <dl class="dwp-key-details-bar__dwp-key-details">
      <div class="dwp-key-details-bar__top-block">
        <dt class="govuk-visually-hidden">Name:</dt>
        <dd class="dwp-key-details-bar__name">{{params.name}}</dd>

        <dt class="govuk-visually-hidden">National Insurance number:</dt>
        <dd class="dwp-key-details-bar__nino">{{params.nino}}</dd>

        <dt class="govuk-visually-hidden">Claim status:</dt>
        <dd class="dwp-key-details-bar__status">{{params.status}}</dd>
      </div>
      
      {% if params.additional %}
        <div class="dwp-key-details-bar__bottom-block">
          {% for item in params.additional %}
            <dt>{{item.label}}:</dt>
            <dd>{{item.value}}</dd>
          {% endfor %}
      {% endif %}
    </dl>
  </section>
{% endmacro %}